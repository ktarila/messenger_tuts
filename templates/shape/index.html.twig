{% extends 'base.html.twig' %}

{% block title %}Shape index{% endblock %}

{% block body %}
    <h1>Shape index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Width</th>
                <th>Height</th>
                <th>Area</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for shape in shapes %}
            <tr>
                <td>{{ shape.id }}</td>
                <td>{{ shape.width }}</td>
                <td>{{ shape.height }}</td>
                <td>{{ shape.area }}</td>
                <td>
                    <a href="{{ path('app_shape_show', {'id': shape.id}) }}">show</a>
                    <a href="{{ path('app_shape_edit', {'id': shape.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_shape_new') }}">Create new</a>
{% endblock %}
